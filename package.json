{
  "name": "@molinit/validator",
  "version": "1.0.0",
  "description": "A flexible, type-safe validation library for TypeScript/JavaScript with declarative schema-based validation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm test",
    "prepare": "npm run build"
  },
  "keywords": [
    "validation",
    "validator",
    "schema",
    "type-checking",
    "typescript",
    "declarative",
    "form-validation",
    "data-validation",
    "object-validation",
    "json-validation"
  ],
  "author": "Molinit <contact@molinit.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/molinit/validator.git"
  },
  "bugs": {
    "url": "https://github.com/molinit/validator/issues"
  },
  "homepage": "https://github.com/molinit/validator#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}


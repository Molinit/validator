{
  "name": "@molinit/validator",
  "version": "1.0.1",
  "description": "A flexible, type-safe validation library for TypeScript/JavaScript with declarative schema-based validation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "default": "./dist/types.js"
    },
    "./constants": {
      "types": "./dist/constants.d.ts",
      "default": "./dist/constants.js"
    },
    "./Validator": {
      "types": "./dist/Validator.d.ts",
      "default": "./dist/Validator.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format": "npm run prettier && npm run lint:fix",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run format && npm run build && npm test",
    "prepare": "npm run build"
  },
  "keywords": [
    "validation",
    "validator",
    "schema",
    "type-checking",
    "typescript",
    "declarative",
    "form-validation",
    "data-validation",
    "object-validation",
    "json-validation"
  ],
  "author": "Molinit <contact@molinit.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/molinit/validator.git"
  },
  "bugs": {
    "url": "https://github.com/molinit/validator/issues"
  },
  "homepage": "https://github.com/molinit/validator#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
